{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}", //apiden mikroservice gidecek olan url 
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5031
        }
      ],
      "UpstreamPathTemplate": "/services/catalog/{everything}", //apiye gelen url -> client buraya istek yapar
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme", //token aud param içerisinde resource_gateway olması gerekmektedir -> program.cs üzerinde tanımlandı
        "AllowedScopes": [ "catalog_fullpermission" ] //resource_gateway sahip olmasından sonra ilgili scope a da sahip olması gerekmektedir 
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
